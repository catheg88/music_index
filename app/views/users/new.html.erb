<h1>Create User</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
  	  <li><%= error %></li>
  	<% end %>
	</ul>
<% end %>

<form action="<%= users_url %>" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="e_mail">email</label>
  <input
    type="text"
    name="user[email]"
    id="e_mail"
    value="<%= @user.email %>">
  <br>

  <label for="pass_word">password</label>
  <input
    type="password"
    name=user[password]
    id="pass_word"
    value="<%= @user.password %>">
  <br>

  <input type="submit">
